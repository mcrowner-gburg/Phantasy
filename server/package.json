{
  "name": "phantasy-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --outfile=dist/index.js --external:@neondatabase/serverless --external:ws --external:twilio --external:zod --external:drizzle-zod --external:drizzle-orm --external:express --external:express-session --external:@sendgrid/mail --external:connect-pg-simple --external:nanoid --external:bcrypt",
    "dev": "nodemon --watch index.ts --exec \"ts-node index.ts\"",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "esbuild": "^0.19.5",
    "connect-pg-simple": "^8.0.0",
    "@neondatabase/serverless": "^1.0.0",
    "bcrypt": "^5.1.1",
    "twilio": "^4.15.0",
    "ws": "^8.15.0",
    "zod": "^3.23.0",
    "drizzle-orm": "^0.36.2",
    "drizzle-zod": "^0.5.0",
    "@sendgrid/mail": "^8.1.6",
    "nanoid": "^4.0.2",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.2"
  }
}