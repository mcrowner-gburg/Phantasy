{
  "name": "phantasy-full",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:frontend": "cd client && npm install && npm run build",
    "copy:frontend": "rm -rf server/dist/client && cp -r client/dist server/dist/client",
    "build:server": "cd server && npm install --omit=dev && npm run build:server",
    "build": "npm run build:frontend && npm run copy:frontend && npm run build:server",
    "start": "node server/dist/index.js",
    "dev": "concurrently \"cd client && npm run dev\" \"cd server && npm run dev\""
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^8.0.0",
    "drizzle-orm": "^0.36.2",
    "drizzle-zod": "^0.5.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "nanoid": "^4.0.2",
    "twilio": "^4.15.0",
    "ws": "^8.15.0",
    "zod": "^3.23.0",
    "@sendgrid/mail": "^7.9.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "esbuild": "^0.19.5",
    "@types/express": "^4.17.19",
    "@types/express-session": "^1.17.6",
    "@types/node": "^20.5.1",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
