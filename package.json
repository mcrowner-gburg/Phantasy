"scripts": {
  "dev:client": "cd client && npm install && npm run dev",
  "dev:server": "cd server && npm install && npm run dev",
  "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",

  "build:client": "cd client && npm install && npm run build",
  "build:server": "cd server && npm install && npm run build",
  "build": "npm run build:client && npm run build:server",

  "start:server": "cd server && npm install && npm start",
  "start": "npm run start:server",

  "check": "tsc",
  "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
  "db:push": "cd server && npm run db:push"
}
