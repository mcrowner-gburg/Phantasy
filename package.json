{
  "name": "phantasy",
  "version": "1.0.0",
  "scripts": {
    "build:client": "cd client && npm install && npm run build",
    "build:server": "npm install --include=dev && esbuild index.ts --bundle --platform=node --format=esm --outdir=dist --external:@neondatabase/serverless --external:ws --external:twilio --external:zod --external:drizzle-zod --external:drizzle-orm --external:express --external:express-session --external:@sendgrid/mail --external:connect-pg-simple --external:nanoid --external:bcrypt",
    "build": "npm run build:client && npm run build:server",
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "nodemon --watch index.ts --exec \"ts-node index.ts\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^8.0.0",
    "@neondatabase/serverless": "^1.0.0",
    "path": "^0.12.7",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.18.17",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.2"
  }
}
