{
  "name": "phantasy-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "cd client && vite",
    "dev:server": "tsx server/index.ts",

    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "esbuild server/index.ts --bundle --platform=node --format=esm --outdir=dist --external:express --external:express-session --external:@sendgrid/mail --external:connect-pg-simple --external:nanoid --external:drizzle-orm --external:bcrypt --external:@neondatabase/serverless --external:ws --external:twilio --external:zod --external:drizzle-zod",

    "start": "node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "@neondatabase/serverless": "^1.2.0",
    "ws": "^8.13.0",
    "twilio": "^4.23.0",
    "zod": "^3.22.0",
    "drizzle-zod": "^0.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.10",
    "tsx": "^3.12.7",
    "vite": "^5.4.19",
    "@vitejs/plugin-react": "^4.0.0"
  }
}
