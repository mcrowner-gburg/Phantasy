{
  "name": "phantasy-server",
  "version": "1.0.0",
  "description": "Phantasy Server Application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "check": "tsc",
    "build:server": "esbuild server/index.ts --bundle --platform=node --format=esm --outdir=dist --external:*",
    "build": "npm run build:server",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn server/index.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.2.0",
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.1.0",
    "connect-pg-simple": "^8.0.0",
    "drizzle-orm": "^0.21.0",
    "drizzle-zod": "^0.21.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "nanoid": "^4.0.0",
    "twilio": "^4.23.0",
    "ws": "^8.15.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "esbuild": "^0.18.17",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=22.16.0"
  }
}
