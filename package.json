{
  "name": "phantasy-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "cd client && vite",
    "dev:server": "tsx server/index.ts",
    
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "esbuild server/index.ts --platform=node --bundle --format=esm --outdir=dist --external:express --external:express-session --external:@sendgrid/mail --external:connect-pg-simple --external:nanoid --external:drizzle-orm --external:bcrypt --external:@neondatabase/serverless --external:ws --external:twilio",
    
    "start": "node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "_comment": "Place your normal runtime dependencies here, e.g., express, bcrypt, drizzle-orm, etc."
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "@sendgrid/mail": "^7.7.0",
    "connect-pg-simple": "^8.0.0",
    "nanoid": "^4.0.2",
    "drizzle-orm": "^0.28.0",
    "bcrypt": "^5.1.0",
    "@neondatabase/serverless": "^0.5.0",
    "ws": "^8.14.0",
    "twilio": "^4.15.0"
  },
  "devDependencies": {
    "_comment": "Dev-only dependencies for build and tooling",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.10",
    "tsx": "^3.12.7",
    "vite": "^5.4.19",
    "@vitejs/plugin-react": "^4.0.0",
    "@sendgrid/mail": "^7.7.0"
  }
}
