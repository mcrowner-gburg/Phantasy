{
  "compilerOptions": {
    "target": "ES2022",             // Modern JS output for Node 20+
    "module": "ESNext",             // Keep ESM syntax
    "moduleResolution": "node",     
    "outDir": "./dist",             
    "rootDir": "./server",          
    "strict": true,                 
    "esModuleInterop": true,        
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true            
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}
